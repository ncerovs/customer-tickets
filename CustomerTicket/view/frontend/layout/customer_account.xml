<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="support-ticket-newticket">
                <arguments>
                    <argument name="path" xsi:type="string">support/tickets/newticket</argument>
                    <argument name="label" xsi:type="string">Submit Ticket</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="support-ticket-index">
                <arguments>
                    <argument name="path" xsi:type="string">support/tickets</argument>
                    <argument name="label" xsi:type="string">My Tickets</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>